config BSP_HAS_HYPERVISOR
	bool "Kernel has a hypervisor enabled"

config BUILD_EMU_ARBITER_MODULE
	bool "Build an emulated arbiter"
	depends on BUILD_KERNEL_MODULES
	default n
	default y if MALI_ARBITER_SUPPORT
	help
	  Build an emulated reference arbiter useful
	  to test Mali without a Virtual Machine

	  If unsure, say N.

config BUILD_EMU_KBASE_MODULE
	bool "Build an emulated kbase"
	depends on BUILD_KERNEL_MODULES
	default n
	default y if MALI_ARBITER_SUPPORT
	help
	  Build an emulated kbase useful
	  to test while arbitration is enabled

	  If unsure, say N.

config BUILD_VM_COMMS_TESTS
	bool "Kernel has vm communication tests enabled"
	depends on BUILD_KERNEL_MODULES
	default n
	default y if UNIT_TEST_KERNEL_MODULES && BSP_HAS_HYPERVISOR

source_local "ptm/Mconfig"
source_local "arbiter/Mconfig"
source_local "power/Mconfig"
source "kernel/drivers/xen/arm/Mconfig"
